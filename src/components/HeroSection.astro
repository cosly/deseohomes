---
// HeroSection.astro
// Hier kan je wat component-specifieke logica toevoegen indien nodig.
import SearchForm from '../components/SearchForm.astro';
---

<div class="relative bg-cover bg-center bg-no-repeat h-[600px] flex items-center justify-center p-6" style="background-image: url('/assets/images/mediterranean-interior-and-olive-plant-exterior-javea-scaled.jpg');">
  <!-- Semi-transparante overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>

  <!-- Flex container for two parts -->
  <div class="relative z-10 flex w-full max-w-7xl mx-auto">
    
    <!-- CTA -->
    <div class="flex flex-col justify-center flex-1">
      <h1 class="text-4xl font-bold text-white">DESEO HOMES</h1>
      <p class="text-xl text-gray-300">PROPERTY ADVISORS</p>
      <h2 class="text-5xl font-bold text-white my-4">Laat jouw droom uitkomen in Javea</h2>
      <div class="flex space-x-4">
        <a href="/woningaanbod" class="bg-yellow-500 text-white px-6 py-2 rounded hover:bg-yellow-600 transition-colors">Woningaanbod</a>
        <a href="/nieuwste-aanbod" class="bg-yellow-500 text-white px-6 py-2 rounded hover:bg-yellow-600 transition-colors">Nieuwste Aanbod</a>
      </div>
    </div>

    <!-- SearchForm -->
    <div class="flex flex-col justify-center flex-1">
      <SearchForm />
    </div>

  </div>
</div>

