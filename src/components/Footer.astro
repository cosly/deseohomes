<footer class="bg-custom-gray text-white w-full">
    <!-- Fixed width container met top uitlijning voor de kolommen -->
    <div class="container mx-auto px-4 lg:px-8 py-10 flex flex-wrap items-start justify-between">
      <!-- Logo en motto sectie -->
      <div class="flex flex-col items-start mb-6 lg:mb-0 lg:w-1/4">
        <img src="https://via.placeholder.com/240x80" alt="DESEO HOMES Logo" class="mb-4">
        <p class="text-sm font-light">Let your Mediterranean dream come through!</p>
      </div>
      
      <!-- Contact sectie -->
      <div class="mb-6 lg:mb-0 lg:w-1/4">
        <h5 class="text-lg font-bold mb-4">Contact</h5>
        <p class="text-sm font-light mb-2">Cami de les Adsubies 381<br>03730 Javea / Xabia<br>(Bezoek alleen op afspraak)</p>
        <p class="text-sm font-light mb-2">info@deseohomes.com</p>
        <p class="text-sm font-light">+34 644 629 510</p>
      </div>
  
      <!-- Links sectie -->
      <div class="mb-6 lg:mb-0 lg:w-1/4">
        <h5 class="text-lg font-bold mb-4">Links</h5>
        <ul class="space-y-2 text-sm font-light">
